{
  "manifest_version": 3,
  "name": "YT Sidebar Comments",
  "version": "1.0",
  "description": "Inject a sidebar on YouTube videos showing last 2 weeks comments.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://www.googleapis.com/*",
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
